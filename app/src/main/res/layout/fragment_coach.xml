<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF6FA"
    android:padding="0dp">

    <ImageView
        android:id="@+id/imgCoach"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_coach"
        android:layout_gravity="center_horizontal"
        android:background="#fff"
        android:contentDescription="Coach Photo" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:backgroundTint="#F88379">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCoachName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coach Name"
                android:textStyle="italic"
                android:textSize="28sp"
                android:gravity="center"
                android:textColor="#222"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvCoachDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#222"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCoachNationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Negara"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#222" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>